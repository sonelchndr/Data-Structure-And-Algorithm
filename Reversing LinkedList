package linkedlist;

public class LL {
	

		 static Node head;
		static  class Node
		 {
			int data;
			Node next;
			Node(int d)
			{
				data=d;
				next=null;
			}
		 }
		 
		static Node reverse(Node head)
		{
			if (head == null || head.next == null)  
	            return head;  
	  
	        
	        Node rest = reverse(head.next);  
	        head.next.next = head;  
	  
	       
	        head.next = null;  //remove the link
	  

	        return rest; 
		}
		 public void push(int new_data)
		   {
			   Node new_node=new Node(new_data);
			   new_node.next=head;
			   head =new_node;
		   }
		 
		 
		 
		 
		 public void printList()
		 {
			 Node n=head;
			 while(n!=null)
			 {
				 System.out.println(n.data+" ");
				 n=n.next;
			 }
		 }

		public static void main(String[] args) {
			LL llist=new LL();
			llist.push(30);
			llist.push(20);
			llist.push(10);
			llist.push(5);
			llist.printList();
			head=reverse(head);
			
			llist.printList();
			
		}

	}


	


